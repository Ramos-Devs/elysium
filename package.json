{
  "name": "elysium",
  "version": "0.1.0",
  "description": "Central graphical interface",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "start": "next start",
    "prepare": "husky install",
    "lint": "pnpm eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "pnpm eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "pnpm prettier --check .",
    "format:fix": "pnpm prettier --write .",
    "test": "jest"
  },
  "dependencies": {
    "next": "15.0.3",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.7.5",
    "@types/react": "^19.0.3",
    "@types/react-dom": "^19.0.3",
    "autoprefixer": "10.4.20",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^8.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.6",
    "postcss": "8.4.35",
    "prettier": "^3.6.2",
    "tailwindcss": "3.4.14",
    "ts-jest": "^29.4.5",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
